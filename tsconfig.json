{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es2016",
    "module": "commonjs",                       
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "noImplicitAny": true,                      
    "strictNullChecks": true,                   
    "skipLibCheck": true,                     
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./babel.config.js",
    "./jest.config.js",
    "./dist/**/*",
    "./coverage/**/*",
  ] 
}
